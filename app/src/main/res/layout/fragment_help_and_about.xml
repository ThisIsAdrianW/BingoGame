<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryLightColor"
        tools:context=".HelpAndAbout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding10">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/helpTextView1"
                        style="@style/helpTextStyle"
                        android:layout_gravity="center"
                        android:autoSizeMinTextSize="@dimen/helpTextSize"
                        android:text="@string/help1" />

                    <TextView
                        android:id="@+id/helpTextView2"
                        style="@style/helpTextStyle"
                        android:layout_gravity="center"
                        android:autoSizeMinTextSize="@dimen/helpTextSize"
                        android:text="@string/help2" />
                </LinearLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/aboutTextView"
                    style="@style/helpTextStyle"
                    android:layout_gravity="center"
                    android:autoSizeMinTextSize="@dimen/helpTextSize"
                    android:text="@string/about" />
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</layout>